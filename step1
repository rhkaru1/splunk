---
- name: Install Splunk Forwarder
  hosts: all
  become: yes
  tasks:
    - name: Check if Splunk Forwarder package exists
      stat:
        path: /customapps/splunk/cloud/artifacts/splunkforwarder-9.3.2-d8bb32809498-Linux-x86_64.tgz
      register: splunk_package

    - name: Create /opt/splunkforwarder directory if not exists
      file:
        path: /opt/splunkforwarder
        state: directory
        mode: '0755'
      when: splunk_package.stat.exists

    - name: Extract Splunk Forwarder package
      ansible.builtin.unarchive:
        src: /customapps/splunk/cloud/artifacts/splunkforwarder-9.3.2-d8bb32809498-Linux-x86_64.tgz
        dest: /opt/splunkforwarder
        remote_src: yes
      when: splunk_package.stat.exists

    - name: Copy deploymentclient.conf to Splunk Forwarder apps directory
      copy:
        src: /customapps/splunk/cloud/deploymentclient.conf
        dest: /opt/splunkforwarder/etc/apps/deploymentclient.conf
        mode: '0644'
      when: splunk_package.stat.exists

    - name: Copy user-seed.conf to Splunk Forwarder system local directory
      copy:
        src: /customapps/splunk/cloud/user-seed.conf
        dest: /opt/splunkforwarder/etc/system/local/user-seed.conf
        mode: '0644'
      when: splunk_package.stat.exists

    - name: Change ownership of /opt/splunkforwarder to splnkmon
      command: chown -R splnkmon:splnkmon /opt/splunkforwarder
      when: splunk_package.stat.exists

